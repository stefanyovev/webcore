
DirectorySlash Off
RewriteOptions AllowNoSlash

RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R,L]


RewriteCond %{REQUEST_URI} ^/?([a-zA-Z][a-zA-Z0-9\.]+)
RewriteCond %{DOCUMENT_ROOT}/static/%1 -f
RewriteRule (.*) static/%1 [END]

RewriteCond %{REQUEST_URI} ^/?([a-zA-Z]+)/([a-zA-Z0-9\.]+)
RewriteCond %{DOCUMENT_ROOT}/apps/%1/static/%2 -f
RewriteRule (.*) apps/%1/static/%2 [END]



RewriteRule (.*) main.php